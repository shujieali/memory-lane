{
  "name": "planned-memory-lane",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "(npm run dev:frontend & npm run dev:backend)",
    "dev:frontend": "vite --config vite.config.mjs",
    "dev:backend": "nodemon server/api.js",
    "build": "tsc && vite build --config vite.config.mjs",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "eslint \"src/**/*.{ts,tsx}\" -c .eslintrc.mjs --max-warnings 0",
    "lint:backend": "eslint \"server/**/*.{js,ts}\" -c .eslintrc.cjs --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  }
}
