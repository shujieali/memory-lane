{
  "name": "planned-memory-lane",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "(npm run dev:frontend & npm run dev:backend)",
    "dev:frontend": "vite --config vite.config.mjs",
    "dev:backend": "nodemon server/api.js",
    "build": "tsc && vite build --config vite.config.mjs",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "eslint \"src/**/*.{ts,tsx}\" -c .eslintrc.mjs --max-warnings 0",
    "lint:backend": "eslint \"server/**/*.{js,ts}\" -c .eslintrc.cjs --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.3.1",
    "@mui/material": "^6.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --fix -c .eslintrc.mjs",
    "server/**/*.{js,ts}": "eslint --fix -c .eslintrc.cjs",
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  }
}
